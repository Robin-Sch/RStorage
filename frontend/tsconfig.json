{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": ["ES2022", "DOM"],
		"outDir": "./dist",
		"module": "commonjs",
		"target": "es2020",
		"strict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"composite": true
	},
	"include": ["./src", "types.ts"]
}